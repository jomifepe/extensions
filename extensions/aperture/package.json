{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "aperture",
  "title": "Aperture",
  "description": "Record you screen directly from Raycast",
  "icon": "extension-icon.png",
  "author": "jomifepe",
  "categories": [
    "Applications",
    "Media",
    "Productivity"
  ],
  "keywords": [
    "aperture",
    "record",
    "screen",
    "recorder",
    "video",
    "capture",
    "mp4"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "start.command",
      "title": "Record Your Screen",
      "subtitle": "Aperture",
      "description": "Start recording your screen",
      "mode": "view",
      "keywords": [
        "start",
        "screen",
        "record",
        "recording",
        "capture"
      ]
    },
    {
      "name": "stop.command",
      "subtitle": "Aperture",
      "description": "Stop recording your screen",
      "title": "Stop Recording",
      "mode": "no-view"
    },
    {
      "name": "preferences.command",
      "subtitle": "Aperture Preferences",
      "description": "Customize your recording preferences",
      "title": "Preferences",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "savePath",
      "type": "directory",
      "title": "Save Location",
      "description": "Where to save the recordings",
      "default": "~/Movies",
      "required": true
    },
    {
      "name": "postSaveAction",
      "type": "dropdown",
      "title": "Post Save Action",
      "description": "What to do after stopping and saving the recording file",
      "data": [
        {
          "title": "Open file in Finder",
          "value": "openFinder"
        },
        {
          "title": "Open file with default app",
          "value": "open"
        },
        {
          "title": "Nothing",
          "value": "nothing"
        }
      ],
      "default": "openFinder",
      "required": false
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.57.1",
    "@raycast/utils": "^1.9.1",
    "date-fns": "^2.30.0",
    "execa": "^8.0.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.6",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^8.47.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "prettier": "^3.0.2",
    "typescript": "^5.1.6"
  },
  "scripts": {
    "build": "ray build -e dist",
    "build:aperture": "rm -rf .aperture-node && git clone https://github.com/wulkano/aperture-node.git .aperture-node && cd .aperture-node && npm run build && mv aperture ../assets/aperture && cd .. && rm -rf .aperture-node",
    "build:aperture-indicator": "cd Sources/aperture-indicator && xcodebuild build -scheme aperture-indicator -configuration Release -sdk macosx SYMROOT=${PWD}/Build && rm -rf ../../assets/aperture-indicator.app && mv Build/Release/aperture-indicator.app ../../assets/aperture-indicator.app",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
