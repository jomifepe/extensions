{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "aperture",
  "title": "Aperture",
  "description": "Record you screen directly from Raycast",
  "icon": "extension-icon.png",
  "author": "jomifepe",
  "categories": [
    "Applications",
    "Media",
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "start.command",
      "title": "Record Your Screen",
      "subtitle": "Aperture",
      "description": "Start recording your screen",
      "mode": "view"
    },
    {
      "name": "stop.command",
      "subtitle": "Aperture",
      "description": "Stop recording your screen",
      "title": "Stop Recording",
      "mode": "no-view"
    }
  ],
  "preferences": [
    {
      "name": "savePath",
      "type": "directory",
      "title": "Save Location",
      "description": "Where to save the recordings",
      "default": "~/Movies",
      "required": true
    },
    {
      "name": "postSaveAction",
      "type": "dropdown",
      "title": "Post Save Action",
      "description": "What to do after stopping and saving the recording file",
      "data": [
        {
          "title": "Open file in Finder",
          "value": "openFinder"
        },
        {
          "title": "Open file with default app",
          "value": "open"
        },
        {
          "title": "Nothing",
          "value": "nothing"
        }
      ],
      "default": "openFinder",
      "required": false
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.57.1",
    "date-fns": "^2.30.0",
    "execa": "^8.0.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish",
    "update:aperture": "rm -rf .aperture-node && git clone https://github.com/wulkano/aperture-node.git .aperture-node && cd .aperture-node && npm run build && mv aperture ../assets/aperture && cd .. && rm -rf .aperture-node"
  }
}
