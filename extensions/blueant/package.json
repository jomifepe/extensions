{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "blueant",
  "title": "Blue Ant",
  "description": "Log your hours in BlueAnt from Raycast",
  "icon": "command-icon.png",
  "author": "jomifepe",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "timeRecording",
      "title": "Time Recording",
      "description": "Time Recording function",
      "mode": "view"
    },
    {
      "name": "lastRecording",
      "title": "What Did I Do on My Last Day?",
      "description": "Get the comment from the last recorded day",
      "mode": "view"
    },
    {
      "name": "completeWeek",
      "title": "Report calendar week complete",
      "description": "Report calendar week complete",
      "mode": "no-view"
    }
  ],
  "preferences": [
    {
      "type": "textfield",
      "required": true,
      "name": "domain",
      "title": "Domain",
      "description": "Your BlueAnt domain",
      "placeholder": "your.blueant.cloud"
    },
    {
      "type": "textfield",
      "required": true,
      "name": "username",
      "title": "Username",
      "description": "Your BlueAnt username",
      "placeholder": "itsme@mario.com"
    },
    {
      "type": "password",
      "required": true,
      "name": "password",
      "title": "Password",
      "description": "Your BlueAnt password",
      "placeholder": "verysecretpassword"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.69.0",
    "@raycast/utils": "^1.13.1",
    "puppeteer": "^19.4.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish",
    "postinstall": "node node_modules/puppeteer/install.js"
  }
}
